<div id="header">
	<div class="wrapper">
						
		<h1><%= @title %></h1>
	
		<ul id="tabbed_nav">
			<li class="get" data-location="/boxes">Boxes</li>
		</ul>
		
	</div><!-- end wrapper -->
</div><!-- end header -->

<div id="content">
	<div class="wrapper">
		
		<form id="new_item" action="/items" method="post" accept-charset="utf-8">
		  <input type="text" name="item[name]" placeholder="Name" id="name">
		  <input type="tel" name="item[box]" placeholder="Box" id="box">
			<input type="submit" value="Add" id="item_submit">
		</form>
		
		<span class="done get" data-location="/">Done adding items</span>
		
		<div id="list_of_stuff">
			<%= partial :items_list %>			
		</div>
		
	</div><!-- end wrapper -->
</div><!-- end content -->
